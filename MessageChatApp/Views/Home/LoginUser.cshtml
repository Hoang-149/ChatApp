@model MessageChatApp.Models.TbUser

@{
    ViewData["Title"] = "LoginUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login User</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginUser" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="email" name="email" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" class="form-control" type="password" id="password" name="password" required />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SIGN IN" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="text-center mt-4 font-weight-light">
    Don't have an account? <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="RegisterUser">Register</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
